
%table
  %tr
    %th
      Address
    %th
      State
    %th
      Actions
      
  -@jobs.each_with_index do |job, idx|
    %tr{:class => (idx % 2 == 0) ? "even" : "odd"}
      %td=job.address
      %td=job.state
      %td
        -job.available_actions.each do |action|
          .action_link= link_to_remote action.to_s, :action => action
  
  