%h1
  -if @subapp.editable?
    Editing 
  -else
    Viewing
  %span.inline_title 
    =@subapp.name
  sub-application
- form_for(@subapp) do |f|
  = render :partial => 'subapp', :locals =>{:f => f}
  -if can?(:update, @subapp) && @subapp.editable?
    = f.submit 'Update'
  

= link_to 'List sub-applications', subapps_path
